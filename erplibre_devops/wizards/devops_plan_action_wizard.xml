                        <!--                            string="Migrate from external DDB"-->
                        <!--                            type="object"-->
                        <!--                            class="btn btn-default"-->
                        <!--                        />-->
                    </group>
                    <group string="Build" style="background-color: #02b5af;">
                        <!--                        <-->
                    </group>
                    <group string="Quality" style="background-color: #04c576;">
                        <button name="state_goto_h_run_test" string="Test" type="object" class="btn btn-default" />
                        <!--                        <button-->
                        <!--                            name="state_goto_not_supported"-->
                        <!--                            string="Analyse/inspection"-->
                        <!--                            type="object"-->
                        <!--                            class="btn btn-default"-->
                        <!--                        />-->
                    </group>
                    <group string="Release" style="background-color: #9bc604;">
                        <!--                        <-->
