            <xpath expr="//button[@name='open_next']" position="replace">
                <button
                    name="open_next"
                    string="Next"
                    type="object"
                    class="btn-primary"
                    attrs="{'invisible': [('has_next', '=', False)]}"
                />
            </xpath>
            <xpath expr="//footer" position="before">
